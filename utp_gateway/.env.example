# UTP Gateway Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3002
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Hyperledger Fabric Configuration
FABRIC_CONNECTION_PROFILE=./config/fabric-connection.json
FABRIC_CHANNEL_NAME=mainchannel
FABRIC_CHAINCODE_NAME=utp-gateway

# Price Feed Configuration
BGT_PRICE_API=https://api.lbma.org.uk/gold/pricing
BST_PRICE_API=https://api.lme.co.uk/lists
BPT_PRICE_API=https://api.lppm.org/platinum/pricing
BINR_PRICE_SOURCE=fixed
PRICE_UPDATE_INTERVAL=30000

# Settlement Configuration
INR_SETTLEMENT_MIN=10
INR_SETTLEMENT_MAX=1000000
BINR_SETTLEMENT_MIN=1
BINR_SETTLEMENT_MAX=100000
SETTLEMENT_BATCH_SIZE=100

# Bank Integration
BANK_API_URL=https://api.bank.in/sandbox
BANK_API_KEY=your-bank-api-key
BANK_WEBHOOK_SECRET=your-bank-webhook-secret

# Database Configuration (if using database)
DB_TYPE=mongodb
DB_HOST=localhost
DB_PORT=27017
DB_NAME=utp_gateway
DB_USER=utp_user
DB_PASS=utp_password

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Configuration
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
CSRF_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/utp-gateway.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring and Analytics
MONITORING_ENABLED=true
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Feature Flags
ENABLE_MULTI_TOKEN_PAYMENTS=true
ENABLE_INSTANT_SETTLEMENT=true
ENABLE_RWA_TOKENS=true
ENABLE_MIXED_SETTLEMENT=true
ENABLE_REAL_TIME_CONVERSION=true
ENABLE_WEBHOOKS=true

# API Rate Limits by Endpoint
AUTH_RATE_LIMIT=10
PAYMENT_RATE_LIMIT=100
CONVERSION_RATE_LIMIT=1000
SETTLEMENT_RATE_LIMIT=50
ADMIN_RATE_LIMIT=5

# UTP Gateway Specific
SUPPORTED_TOKENS=BGT,BST,BPT,BINR,RWA
SUPPORTED_SETTLEMENTS=INR,BINR,BGT,MIXED
DEFAULT_SETTLEMENT=CURRENCY
MAX_PAYMENT_AMOUNT=10000000
MIN_PAYMENT_AMOUNT=1

# Contact Information
SUPPORT_EMAIL=support@utpgateway.com
TECHNICAL_DOCS_URL=https://docs.utpgateway.com
API_DOCS_URL=https://api.utpgateway.com/docs